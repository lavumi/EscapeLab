{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++14",
                "-g",
                "${workspaceRoot}/*.cpp",
                "${workspaceRoot}/*/*.cpp",
                "${workspaceRoot}/*/*/*.cpp",      
                "-o",
                "${workspaceRoot}/EscapeLab",
                "-lncurses"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
